@model ShopBanHang.Context.UserMasterData
@{
    ViewBag.Title = "AddOrEdit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .labe {
        margin-right: 110px;
        color: white;
        width:max-content;
    }

    .labe1 {
        
    }
</style>
<div style="margin-left: 100px">
    <center>
        <div class="row justify-content-md-center" style="background-color:cadetblue;">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body" style="background-color:darkcyan; white-space:inherit">
                        @using (Html.BeginForm())
                        {
                           @Html.HiddenFor(model => model.Id)

                            <div class="form-group" style="padding: 20px; width: 300px;">
                                <div class="labe"> @Html.LabelFor(model => model.FirstName)<br /></div>
                                @Html.EditorFor(model => model.FirstName)
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                            <div class="form-group">
                                <div class="labe">@Html.LabelFor(model => model.LastName)<br /></div>
                                @Html.EditorFor(model => model.LastName)
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                            <div class="form-group">
                                <div class="labe" style="margin-right:140px">@Html.LabelFor(model => model.Email)<br /></div>
                                <div class="labe1">
                                    @Html.EditorFor(model => model.Email)
                                </div>
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                <div class="labe">@Html.LabelFor(model => model.Password)<br /></div>
                                <div class="labe1">
                                    @Html.EditorFor(model => model.Password)
                                </div>
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                            <div class="form-group">
                                <div class="labe">@Html.LabelFor(model => model.IsAdmin)<br /></div>
                                <div class="labe1">@Html.EditorFor(model => model.IsAdmin)</div>
                                @Html.ValidationMessageFor(model => model.IsAdmin)

                            </div>
                            <div class="form-group" style="margin-bottom:50px;">
                                <input style="margin-right:50px" type="Submit" value="Create" class="btn btn-success" />
                                <input type="reset" value="Reset" class="btn btn-danger" />
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </center>
    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>